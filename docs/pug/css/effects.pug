
extends modules

block variables
  - var pageID = 'css/effects'
  - var pageTitle = 'Visual Effects'
  - var prism = true

block article
  h3.ui-header-primary Visual Effects
  section
    h4.ui-header-secondary
      span Meters
      label.ui-float-right(for='meters-src')
        i(data-schema-icon='code')
    div
      meter(value='20' min='0' low='33' high='66' optimum='100' max='100' title='20') 20
      meter.ui-skip-small(value='60' min='0' low='33' high='66' optimum='100' max='100' title='60') 60
      meter.ui-skip-small(value='100' min='0' low='33' high='66' optimum='100' max='100' title='100') 100
    .ui-toggle-target.ui-skip-large
      input#meters-src(type='checkbox' checked)
      div
        pre: code.language-markup.
          &lt;meter value="20" min="0" low="33" high="66" optimum="100" max="100" title="20"&gt;20&lt;/meter&gt;
          &lt;meter value="60" min="0" low="33" high="66" optimum="100" max="100" title="60"&gt;60&lt;/meter&gt;
          &lt;meter value="100" min="0" low="33" high="66" optimum="100" max="100" title="100"&gt;100&lt;/meter&gt;

  section
    h4.ui-header-secondary
      span Progress Bars
      label.ui-float-right(for='progress-bars-src')
        i(data-schema-icon='code')
    div
      progress(value='100' max='100' title='100%') all completed
      progress.ui-progress-success.ui-skip-small(value='80' max='100' title='80%') 80% completed
      progress.ui-progress-info.ui-skip-small(value='60' max='100' title='60%') 60% completed
      progress.ui-progress-warning.ui-progress-striped.ui-skip-small(value='40' max='100' title='40%') 40% completed
      progress.ui-progress-danger.ui-progress-striped.ui-skip-small(value='20' max='100' title='20%') 20% completed
      progress.ui-skip-small(max='100' title='no value') no value
    .ui-toggle-target.ui-skip-large
      input#progress-bars-src(type='checkbox')
      div
        pre: code.language-markup.
          &lt;progress value="100" max="100" title="100%"&gt;all completed&lt;/progress&gt;
          &lt;progress class="ui-progress-success" value="80" max="100" title="80%"&gt;80% completed&lt;/progress&gt;
          &lt;progress class="ui-progress-info" value="60" max="100" title="60%"&gt;60% completed&lt;/progress&gt;
          &lt;progress class="ui-progress-warning ui-progress-striped" value="40" max="100" title="40%"&gt;40% completed&lt;/progress&gt;
          &lt;progress class="ui-progress-danger ui-progress-striped" value="20%" max="100" title="20%"&gt;20% completed&lt;/progress&gt;
          &lt;progress max="100" title="no value"&gt;no value&lt;/progress&gt;

  section
    h4.ui-header-secondary
      span Range Sliders
      label.ui-float-right(for='range-sliders-src')
        i(data-schema-icon='code')
    div
      input(type='range' min='0' max='100' step='1' value='60' aria-valuemin='0' aria-valuemax='100' aria-valuenow='60')
    .ui-toggle-target.ui-skip-medium
      input#range-sliders-src(type='checkbox')
      div
        pre: code.language-markup.
          &lt;input type="range" min="0" max="100" step="1" value="60" aria-valuemin="0" aria-valuemax="100" aria-valuenow="60"&gt;

  section
    h4.ui-header-secondary
      span Audio
      label.ui-float-right(for='audio-src')
        i(data-schema-icon='code')
    div
      audio(controls)
        source(src='https://upload.wikimedia.org/wikipedia/en/8/82/Someone_Like_You.ogg' type='audio/ogg')
        span.ui-color-danger Your browser does not support the #[code audio] element.
    .ui-toggle-target.ui-skip-large
      input#audio-src(type='checkbox')
      div
        pre: code.language-markup.
          &lt;audio controls&gt;
            &lt;source src="https://upload.wikimedia.org/wikipedia/en/8/82/Someone_Like_You.ogg" type="audio/ogg"&gt;
            &lt;span class="ui-color-danger"&gt;Your browser does not support the &lt;code&gt;audio&lt;/code&gt; element.&lt;/span&gt;
          &lt;/audio&gt;

  section
    h4.ui-header-secondary
      span Video
      label.ui-float-right(for='video-src')
        i(data-schema-icon='code')
    div
      video(controls)
        source(src='https://upload.wikimedia.org/wikipedia/commons/c/c0/Big_Buck_Bunny_4K.webm' type='video/webm')
        span.ui-color-danger Your browser does not support the #[code video] element.
    .ui-toggle-target.ui-skip-large
      input#video-src(type='checkbox')
      div
        pre: code.language-markup.
          &lt;video controls&gt;
            &lt;source src="https://upload.wikimedia.org/wikipedia/commons/c/c0/Big_Buck_Bunny_4K.webm" type="video/webm"&gt;
            &lt;span class="ui-color-danger"&gt;Your browser does not support the &lt;code&gt;video&lt;/code&gt; element.&lt;/span&gt;
          &lt;/video&gt;
