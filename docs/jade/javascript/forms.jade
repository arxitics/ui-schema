
extends components

block variables
  - var pageID = 'javascript/forms'
  - var pageTitle = 'Forms'
  - var prism = true

block article
  h3.ui-header-primary Forms
  .ui-grid-container
    pre: code.language-markup.
      &lt;!-- Validate the form and do not submit empty fields --&gt;
      &lt;form data-schema-validate action="/search" method="post"&gt;

      &lt;!-- Only submit the form when some fields have been changed --&gt;
      &lt;form data-schema-validate="changed" action="/articles/1212.5605/edit" method="post"&gt;

      &lt;!-- Only allow to submit the form once --&gt;
      &lt;form data-schema-validate="once" action="/auth/login" method="post"&gt;
